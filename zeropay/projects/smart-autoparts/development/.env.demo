# Demo Environment - Safe for Testing

APP_NAME="Smart AutoParts Demo"
APP_ENV=demo
APP_DEBUG=true
APP_URL=http://localhost:8000

# Demo Database (Isolated)
DB_CONNECTION=sqlite
DB_DATABASE=database/demo.sqlite

# Demo Mail (Catches all emails)
MAIL_MAILER=log
MAIL_FROM_ADDRESS=demo@smartautoparts.sa

# Demo Payment (Sandbox Mode)
PAYMENT_MODE=sandbox
STC_PAY_SANDBOX=true
TAMARA_SANDBOX=true
TABBY_SANDBOX=true

# Demo Shipping (Test Tracking)
SHIPPING_MODE=demo
DEMO_TRACKING_ENABLED=true

# Demo Features
DEMO_MODE=true
DEMO_RESET_HOURLY=true
DEMO_WATERMARK=true

# Safe Limits
MAX_DEMO_ORDERS=100
MAX_DEMO_PRODUCTS=5000
DEMO_USER_LIMIT=50